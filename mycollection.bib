doi = {10.1201/9781420050943.ch2},
file = {:C$\backslash$:/Users/Hp/AppData/Local/Mendeley Ltd./Mendeley Desktop/Downloaded/Graham, V{\'{a}}squez, Buschmann - 2007 - Global ecology of the giant kelp.pdf:pdf},
