isbn = {1365-2699},
issn = {13652699},
journal = {Journal of Biogeography},
keywords = {Biomass dynamics,Bottom-up,Disturbance,Empirical orthogonal function,Generalized additive model,Macrocystis pyrifera,Spatial scales of variability,Top-down,USA},
number = {10},
