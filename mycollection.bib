issn = {2296-7745},
journal = {Frontiers in Marine Science},
keywords = {climate change impacts,general circulation model projections,stratification,upwelling drivers,upwelling intensification},
number = {December},
pages = {1--10},
title = {{Under Pressure: Climate Change, Upwelling, and Eastern Boundary Upwelling Ecosystems}},
url = {http://journal.frontiersin.org/article/10.3389/fmars.2015.00109},
