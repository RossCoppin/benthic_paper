doi = {10.1016/j.jmarsys.2003.05.003},
file = {:C$\backslash$:/Users/Hp/AppData/Local/Mendeley Ltd./Mendeley Desktop/Downloaded/Gaylord et al. - 2004 - Physical-biological coupling in spore dispersal of kelp forest macroalgae.pdf:pdf},
isbn = {0924-7963},
