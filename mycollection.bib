file = {:C$\backslash$:/Users/Hp/AppData/Local/Mendeley Ltd./Mendeley Desktop/Downloaded/Reddin et al. - 2015 - Coastal upwelling drives intertidal assemblage structure and trophic ecology.pdf:pdf},
issn = {1932-6203},
journal = {PLoS ONE},
number = {7},
pages = {e0130789},
title = {{Coastal upwelling drives intertidal assemblage structure and trophic ecology}},
url = {http://dx.plos.org/10.1371/journal.pone.0130789},
